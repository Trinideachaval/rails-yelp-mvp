<h1><strong>Restaurant </strong><%= @restaurant.name %></h1>
<div class="card-trip">
  <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
  <div class="card-trip-infos">
    <div>
      <p>Addres:<%= @restaurant.address %></p>
      <p>Category: <%= @restaurant.category %></p>
      <p>Contact: <%= @restaurant.phone_number %></p>
    </div>
  </div>
</div>

<h3>Restaurants reviews</h3>
<div class="container">
  <ul>
      <% @restaurant.reviews.each do |review| %>
        <li class=“list-group-item”><%= review.content %></li>
      <% end %>
  </ul>
</div>
 <%= link_to "Leave a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
<%= link_to "Back", restaurants_path, class: "btn btn-primary"  %>



<h1> Create a new restaurant </h1>

<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :category, collection: Restaurant::CATEGORY %>
  <%= f.input :phone_number %>
  <%= f.submit%>
<% end %>

<%= link_to 'Back', restaurants_path, class: "btn btn-primary" %>
